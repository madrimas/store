{% extends 'base.html.twig' %}
{% block body %}
    <!DOCTYPE html>
    <html>
    <title>rmStore</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootflat/2.0.4/css/bootflat.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .w3-sidebar a {
            font-family: "Roboto", sans-serif
        }

        body, h1, h2, h3, h4, h5, h6, .w3-wide {
            font-family: "Montserrat", sans-serif;
        }
    </style>
    <body class="w3-content" style="max-width:1200px">


    <!-- Sidebar/menu -->
    <nav class="w3-sidebar w3-bar-block w3-white w3-collapse w3-top" style="z-index:3;width:250px" id="mySidebar">
        <div class="w3-container w3-display-container w3-padding-16">
            <i onclick="w3_close()" class="fa fa-remove w3-hide-large w3-button w3-display-topright"></i>
            <h3><a href="{{ path('app_default_showhomepage') }}" class="w3-button w3-wide"><b>rmStore</b></a></h3>
        </div>
        <div class="w3-padding-64 w3-large w3-text-grey" style="font-weight:bold">
            <a href="{{ path('app_default_showshirts') }}" class="w3-bar-item w3-button">Koszulki</a>
            <a href="{{ path('app_default_showshorts') }}" class="w3-bar-item w3-button">Spodenki</a>
            <a onclick="myAccFunc()" href="javascript:void(0)" class="w3-button w3-block w3-left-align">
                Zestawy <i class="fa fa-caret-down"></i>
            </a>
            <div id="demoAcc" class="w3-bar-block w3-hide w3-padding-large w3-medium">
                <a href="{{ path('app_default_showhomekits') }}" class="w3-bar-item w3-button">Domowe</a>
                <a href="{{ path('app_default_showawaykits') }}" class="w3-bar-item w3-button">Wyjazdowe</a>
                <a href="{{ path('app_default_showthirdkits') }}" class="w3-bar-item w3-button">Trzecie</a>
            </div>
        </div>
        <a href="#footer" class="w3-bar-item w3-button w3-padding">Kontakt</a>
        {% if is_granted('IS_AUTHENTICATED_FULLY') == 0 %}
            <a href="{{ path('login') }}" class="w3-bar-item w3-button w3-padding">Logowanie</a>
        {% endif %}
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ logout_path() }}" class="w3-bar-item w3-button w3-padding">Wyloguj</a>
        {% endif %}
        {% if is_granted('IS_AUTHENTICATED_FULLY') == 0 %}
            <a href="{{ path('app_register_register') }}" class="w3-bar-item w3-button w3-padding">Rejestracja</a>
        {% endif %}

    </nav>

    <!-- Top menu on small screens -->
    <header class="w3-bar w3-top w3-hide-large w3-black w3-xlarge">
        <div class="w3-bar-item w3-padding-24 w3-wide">rmStore</div>
        <a href="javascript:void(0)" class="w3-bar-item w3-button w3-padding-24 w3-right" onclick="w3_open()"><i
                    class="fa fa-bars"></i></a>
    </header>

    <!-- Overlay effect when opening sidebar on small screens -->
    <div class="w3-overlay w3-hide-large" onclick="w3_close()" style="cursor:pointer" title="close side menu"
         id="myOverlay"></div>

    <!-- !PAGE CONTENT! -->
    <div class="w3-main" style="margin-left:250px">

        <!-- Push down content on small screens -->
        <div class="w3-hide-large" style="margin-top:83px"></div>

        <!-- Top header -->
        <header class="w3-container w3-xlarge">
            <p class="w3-left">Homepage</p>
            <p class="w3-right">
                <a href="{{ path('app_default_getshoppingcart') }}"
                   class="fa fa-shopping-cart w3-margin-right w3-button"></a>
            </p>
        </header>

        <!-- Image header -->
        <div class="w3-display-container w3-container">
            <img src="{{ asset('images/head.jpg') }}" style="width:100%"/>
            <div class="w3-display-bottomright w3-text-white" style="padding:24px 48px" align="right">
                <h1 class="w3-hide-small">KOLEKCJA 17/18</h1>
                <p><a href="{{ path('app_default_showhomekits') }}"
                      class="w3-button w3-black w3-padding-large w3-large">ZAMÓW TERAZ</a></p>
            </div>
        </div>


        <!-- Footer -->
        <footer class="w3-padding-64 w3-light-grey w3-small w3-center" id="footer">
            <div class="w3-row-padding">

                <div class="w3-col s4">
                    <h4>Informacje</h4>
                    <p><a href="{{ path('app_default_getabout') }}">O nas</a></p>
                    <p><a href="{{ path('app_default_gethelp') }}">Doradztwo</a></p>
                    <p><a href="{{ path('app_default_getshipping') }}">Dostawa</a></p>
                    <p><a href="{{ path('app_default_getpayment') }}">Płatność</a></p>
                    <p><a href="#">Powrót</a></p>
                </div>

                <div class="w3-col s4 w3-justify">
                    <h4>rmStore</h4>
                    <p><i class="fa fa-fw fa-map-marker"></i> rmStore Co.</p>
                    <p><i class="fa fa-fw fa-phone"></i> 504692633</p>
                    <p><i class="fa fa-fw fa-envelope"></i> zapiorkowski@gmail.com</p>
                    <br>
                    <a href=https://www.facebook.com/zapiorkowski target="_blank"><i
                                class="fa fa-facebook-official w3-hover-opacity w3-large"></i></a>
                    <a href=https://www.instagram.com/zapiorkowski target="_blank"><i
                                class="fa fa-instagram w3-hover-opacity w3-large"></i></a>
                    <a href=https://www.snapchat.com/add/zapiorkowski target="_blank"><i
                                class="fa fa-snapchat w3-hover-opacity w3-large"></i></a>
                    <a href=https://twitter.com/zapiorkowski target="_blank"><i
                                class="fa fa-twitter w3-hover-opacity w3-large"></i></a>
                    <a href=https://www.linkedin.com/in/zapiorkowski target="_blank"><i
                                class="fa fa-linkedin w3-hover-opacity w3-large"></i></a>
                </div>
            </div>
        </footer>
    </div>


    <script>
        // Accordion
        function myAccFunc() {
            var x = document.getElementById("demoAcc");
            if (x.className.indexOf("w3-show") === -1) {
                x.className += " w3-show";
            } else {
                x.className = x.className.replace(" w3-show", "");
            }
        }

        // Click on the "Jeans" link on page load to open the accordion for demo purposes
        document.getElementById("myBtn").click();


        // Script to open and close sidebar
        function w3_open() {
            document.getElementById("mySidebar").style.display = "block";
            document.getElementById("myOverlay").style.display = "block";
        }

        function w3_close() {
            document.getElementById("mySidebar").style.display = "none";
            document.getElementById("myOverlay").style.display = "none";
        }
    </script>

    </body>
    </html>
{% endblock %}
